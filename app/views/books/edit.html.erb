<h1>Editing Book</h1>

<%= form_for(@book) do |f| %>

  <% if @book.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
  <% end %>

	<div class="field">
	<h4>Title</h4>
	<%= f.text_field :title %>
	</div>

	<div class="field">
	<h4>Body</h4>
	<%= f.text_area :body %>
	</div>

	<div class="actions">
	<%= f.submit 'Update Book' %>
	</div>
<% end %>

<%= link_to "Show", book_path(@book) %>
<span>|</span>
<%= link_to "Back", books_path %>